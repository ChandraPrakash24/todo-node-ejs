
<%- include('header') %>

      <div class="box" id="heading">
            <h1><%= listTitle %></h1>
      </div>

      <div class="box">
               <% for( let index = 0; index < newListItem.length; index++ ) { %>
                  <div class="item">
                        <input type="checkbox">
                        <p><%= newListItem[index] %></p>
                  </div>
               <% } %>
               <form class="item" action="/" method="POST">
                  <input type="text" name="newItem" placeholder="Add here" autocomplete="off">
                  <button type="submit"  name="list" value=<%= listTitle %>>+</button>
            </form>
      </div>




